        "prooph/common": "^3.5",
        "container-interop/container-interop" : "~1.1"
    },
    "require-dev": {
        "prooph/event-store": "dev-5.0-beta",
        "phpunit/phpunit": "4.7.*",
        "fabpot/php-cs-fixer": "1.7.*",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Prooph\\EventStore\\Adapter\\Doctrine\\": "src/"
        }
